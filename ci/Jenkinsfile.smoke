pipeline {
  agent {
    docker {
      image 'cypress/browsers'
      args '--entrypoint=""'
    }
  }

  stages {
    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }

    stage('Run Smoke Tests') {
      steps {
        sh './batchs/smoke-test.sh'
      }
    }
  }
    post{
        always {
            junit 'results/**/*.xml'
            // archiveArtifacts artifacts: 'cypress/reports/**/*.*', followSymlinks: false
        }
    }
}
